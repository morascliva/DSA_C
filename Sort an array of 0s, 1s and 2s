
Given an array of size N containing only 0s, 1s, and 2s; sort the array in ascending order.

#include<stdio.h>
void sort012(int arr[], int n)
{
    int low=0;
    int mid=0;
    int high=n-1;
        while(mid<=high)
  {  
        switch(arr[mid]){
            
                case 0: 
            {
                   int temp=arr[low];
                   arr[low]=arr[mid];
                   arr[mid]=temp;
                   low++;
                   mid++;
            }
                   
        break;
        
    
        case 1:
                 mid++;
                 break;
                             
                 case 2:
                 {
                 int temp=arr[mid];
                 arr[mid]=arr[high];
                 arr[high]=temp;
                 high--;}
                 
                 break;
               
    
    }
    
  }
}


int main()
{


    int arr[]={0,0,1,2,1,0,2,0};
    int n =sizeof(arr) / sizeof(arr[0]);
    
    
    
    
    
    printf("Original array is :");
    
    
    for(int i=0;i<n;i++ )
    {
        printf("%d\n",arr[i]);
    }
        
        
        sort012(arr,n);
        printf("sorted array is :");
    
    
    for(int i=0;i<n;i++ )
    {
        printf("%d\n",arr[i]);
    }
        return 0;
}
